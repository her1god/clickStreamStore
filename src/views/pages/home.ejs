<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<main class="container mx-auto px-6 py-12">
    <header class="mb-12 text-center">
        <h1 class="text-4xl font-bold text-gray-900 mb-2">Curated Tech</h1>
        <p class="text-gray-500">Premium gadgets for your digital lifestyle.</p>
    </header>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        <% if (products && products.length > 0) { %>
            <% products.forEach(product => { %>
                <a href="/product/<%= product.id %>" class="group block">
                    <div class="bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-lg transition-all duration-300 border border-gray-100">
                        <div class="h-64 bg-gray-100 flex items-center justify-center relative overflow-hidden">
                             <!-- Placeholder image if no url or ensure valid url -->
                             <% if (product.image_url) { %>
                                <img src="<%= product.image_url %>" alt="<%= product.name %>" class="object-cover w-full h-full group-hover:scale-105 transition-transform duration-500">
                             <% } else { %>
                                <span class="text-gray-300 text-4xl font-bold"><%= product.name.charAt(0) %></span>
                             <% } %>
                        </div>
                        <div class="p-6">
                            <div class="flex justify-between items-start mb-2">
                                <h3 class="text-lg font-semibold text-gray-900 group-hover:text-blue-600 transition-colors"><%= product.name %></h3>
                                <span class="font-medium text-blue-600">Rp <%= product.price.toLocaleString('id-ID') %></span>
                            </div>
                            <p class="text-gray-500 text-sm line-clamp-2"><%= product.description %></p>
                        </div>
                    </div>
                </a>
            <% }) %>
        <% } else { %>
            <div class="col-span-full text-center py-20 bg-white rounded-xl shadow-sm border border-gray-100">
                <p class="text-gray-400">No products found. Database might be empty or disconnected.</p>
            </div>
        <% } %>
    </div>
</main>

<%- include('../partials/footer') %>
