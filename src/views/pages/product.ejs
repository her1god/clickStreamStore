<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<main class="container mx-auto px-6 py-12">
    <div class="max-w-4xl mx-auto bg-white rounded-3xl shadow-sm border border-gray-100 overflow-hidden">
        <div class="grid grid-cols-1 md:grid-cols-2">
            <div class="h-96 md:h-auto bg-gray-100 flex items-center justify-center">
                 <% if (product.image_url) { %>
                    <img src="<%= product.image_url %>" alt="<%= product.name %>" class="object-cover w-full h-full">
                 <% } else { %>
                    <span class="text-gray-300 text-6xl font-bold"><%= product.name.charAt(0) %></span>
                 <% } %>
            </div>
            <div class="p-8 md:p-12 flex flex-col justify-center">
                <h1 class="text-3xl font-bold text-gray-900 mb-4"><%= product.name %></h1>
                <p class="text-gray-500 mb-6 leading-relaxed"><%= product.description %></p>
                <div class="flex items-center justify-between mt-auto">
                    <span class="text-2xl font-bold text-blue-600">Rp <%= product.price.toLocaleString('id-ID') %></span>
                    <button data-product="<%= JSON.stringify({id: product.id, name: product.name, price: product.price}) %>"
                            onclick="addToCart(JSON.parse(this.getAttribute('data-product')))"
                            class="px-6 py-3 bg-blue-600 text-white rounded-xl font-medium hover:bg-blue-700 transition shadow-lg shadow-blue-200">
                        Add to Cart
                    </button>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include('../partials/footer') %>
